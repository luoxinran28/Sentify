{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "start-client",
      "type": "shell",
      "command": "cd client && npm start",
      "isBackground": true,
      "problemMatcher": {
        "owner": "custom",
        "pattern": {
          "regexp": "^$"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Starting the development server",
          "endsPattern": "Compiled successfully|Failed to compile"
        }
      }
    }
  ]
} 